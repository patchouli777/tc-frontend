{
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  "paths": {
    "@/*": ["./src/*"]
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],

  "compilerOptions": {
    "module": "es2022",
    "target": "es2021",
    "lib": ["ES2021", "dom", "ESNext", "ES2021.String"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
